    <style name="TwitterAppTheme" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/TwitterActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/TwitterAppTheme.ActionBar.TabText</item>
    </style>

    <style name="TwitterActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/twitter_blue</item>
        <item name="android:titleTextStyle">@style/TwitterActionBar.TitleTextStyle</item>
    </style>

    <style name="TwitterActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="FaintedTextSmall">
        <item name="android:textColor">@color/faint_text</item>
        <item name="android:textSize">12sp</item>
    </style>

